<!DOCTYPE html>
<html lang="en">

<head>
    <title>SignUp | GlobeTrotters</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.13.0/css/mdb.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="images/land.css">
    <script>
        function validate() {

            var pass = document.getElementById("password");
            var cpass = document.getElementById("cpass")
            if (pass.value.trim() != cpass.value.trim()) {
                alert("passwords entered do not match.");
                return false;
            }
            else
                true;

        }
    </script>
</head>

<body>

    <header>

        <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar">
            <div class="container">
                <a class="navbar-brand" href="/"><strong>Globe Trotters.</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/#About-us">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/destination">Destinations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#Contact">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/#FAQs">FAQs</a>
                        </li>
                        <li class="nav-item">
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="view intro-2 viewback">
            <div class="full-bg-img">
                <div class="mask rgba-indigo-slight flex-center">
                    <div class="container" style="margin-left: 30%">

                        <div class="white-text text-center wow fadeInUp">



                            <div class="col-md-6 rounded z-depth-4 colorsign ">

                                <form onsubmit="return validate()" class="text-center p-5" action="/sign_up"
                                    method="post" enctype="multipart/form-data" <br><br><br>
                                    <p class="center line-1 anim-typewriter">Explore with us and keep writing.<i
                                            class="far fa-heart"></i>
                                    </p>

                                    <p class="h4 mb-4">Sign Up</p>
                                    <input name="first_name" id="first_name" type="text" placeholder="first name"
                                        required class="form-control mb-4">
                                    <input name="last_name" id="last_name" type="text" placeholder="last name" required
                                        class="form-control mb-4">
                                    <input name="email" id="email" type="email" placeholder="Email" required
                                        class="form-control mb-4">
                                    <input name="password" id="password" type="password" placeholder="password" required
                                        class="form-control mb-4">
                                    <input id="cpass" type="password" placeholder="confirm password" required
                                        class="form-control mb-4">
                                    <div class="custom-file mb-3">
                                        <input type="file" name="file" id="file" class="custom-file-input">
                                        <label style="text-align: left; color:rgb(118,118,118); " for="file"
                                            class="custom-file-label">Choose File</label>
                                    </div>



                                    <button class="btn btn-info btn-block my-4" type="submit">Sign Up</button>






                                </form>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </header>

    <!-- Footer -->
    <footer class="page-footer font-small pt-4">


        <div class="container-fluid">
