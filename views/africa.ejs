<html>

<head>
  <title>index</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
  <!-- Bootstrap core CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.13.0/css/mdb.min.css" rel="stylesheet">
  <link href="images/land.css" type="text/css" rel="stylesheet">


</head>

<body>



  <nav class="navbar navbar-expand-lg dest-nav">
    <a class="navbar-brand" href="/">GlobeTrotters.</a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/#About-us">About Us</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/destination">Destinations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#Contact">Contact Us</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/#FAQs">FAQs</a>
        </li>
        <% if(user){%>
          <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
          </li>
          <% } else { %>  
          <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
          </li>
          <% } %>
      </ul>



    </div>
  </nav>
  <br>
  <div class="container">
    <div class="row justify-content-center">
      <div style="border-radius: 7px;" class="jumbotron p-0 col-md-11">

        <!-- Card image -->
        <!-- <div class="view overlay rounded-top"> -->
        <img src="images/africa.jpeg" class="img-fluid" alt="Sample image">
        <a href="#">
          <div class="mask rgba-white-slight"></div>
        </a>
        <!-- </div> -->

        <!-- Card content -->
        <div class="card-body text-center mb-3">

          <!-- Title -->
          <h3 class="card-title h3 my-4"><strong>Africa</strong></h3>
          <!-- Text -->
          <p class="card-text py-2">Some quick example text to build on the card title and make up the bulk of the
            card's</p>
          <!-- Button -->
          <!--Dropdown primary-->
          <div class="dropdown">
            <form action="country" method="POST">
              <select name="country">
                <% if (typeof usersArray2 !== 'undefined' && usersArray2.length > 0) {%>
                  <% usersArray2[0].country.forEach(function (op) { %>
                <option value="<%= op %>"><%= op %></option>
                <% }) %>
                <% } %>
              </select>
              <input type="submit">
            </form>
          </div>
          <!--/Dropdown primary-->
        </div>

      </div>
    </div>

    <div class="jumbotron text-center hoverable p-4">

      <!-- Grid row -->
      <div class="row">
        <% if (typeof usersArray !== 'undefined' && usersArray.length > 0) {%>
          <%for (var i = 0; i < usersArray.length; i++) { %>
            <% if(usersArray[i].result.length > 0) { %>
              <% for(var j=0; j< usersArray[i].result.length ; j++) { %>

        <!-- Grid column -->
        <div class="col-md-4 offset-md-1 mx-3 my-3">

          <!-- Featured image -->
          <div class="view overlay">
            <img src="https://mdbootstrap.com/img/Photos/Others/laptop-sm.jpg" class="img-fluid"
              alt="Sample image for first version of blog listing">
            <a>
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>

        </div>
        <!-- Grid column -->

        <!-- Grid column -->
        <div class="col-md-7 text-md-left ml-3 mt-3">
          <form action="blogpage" method="POST">
          <h4 class="h4 mb-4"><input style="border: none;" name="blogTitle" value="<%= usersArray[i].result[j].blog.title %>" readonly></h4>

          <p class="font-weight-normal"><%= usersArray[i].result[j].blog.description %></p>
          <p class="font-weight-normal">by <a><strong><%= usersArray[i].first_name %> <%= usersArray[i].last_name %></strong></a>
            <br><input style="border:none;" name="blogEmail" value="<%= usersArray[i].email %>"></p>

            <button type="submit" class="btn btn-success">Read more</button>
            </form>
        </div>
        <!-- Grid column -->
        <%}%>
        <%}%>
     <%}%>
   <%}%>
      </div>
      <!-- Grid row -->

    </div>
    <!-- News jumbotron -->
  </div>

  <footer class="page-footer font-small pt-4">

    <!--Footer Links-->
    <div class="container-fluid">
      <div class="row">
       

        <!--First column-->
        <div class="col-md-4">
          <h1>GlobeTrotters.</h1>

        </div>
        <!--/.First column-->

        <!--Second column-->
        <div class="col-md-4">

          <ul>
            <li><a href="/#About-us">About Us</a></li>
            <li><a href="/destination">Destinations</a></li>
            <li><a href="/#FAQs">FAQs</a></li>
          </ul>
        </div>
        <div class="col-md-4">
          <h4>Contact Us</h4>
          <p><i class="fa fa-mobile" aria-hidden="true"></i> 1234567890
            <br><i class="fa fa-phone" aria-hidden="true"></i> 0987654321
            <br><a href="mailto:globetrotters@gmail.com"><i class="fa fa-envelope" aria-hidden="true"></i>
              globetrotters@gmail.com</a></p>
        </div>
        <!--/.Second column-->
      </div>
    </div>
    <div class="footer-copyright text-center py-3"> Made with <i class="far fa-heart"></i> by GlobeTrotters
    </div>
  </footer>
  <!--/.Footer-->


  <!-- JQuery -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.13.0/js/mdb.min.js"></script>

</body>

</html>