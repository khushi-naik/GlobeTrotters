    <div class="container-fluid">
        <div class="col-md-8 offset-2">
            <div>
                
            </div>

            <form action="blogedit" method="POST" enctype="multipart/form-data">
                <input name="blog_title" type="text" id="blogname" class="form-control mb-4 col-4"
                                value="<%= blogArray[0].result[0].blog.title %>">
        
                                <label><i class="fas fa-flag"></i> Choose a Country</label><br>
        
                                <select name="blog_country" class="browser-default custom-select mb-4 col-4">
                                    <option value="<%= blogArray[0].result[0].blog.country %>" selected><%= blogArray[0].result[0].blog.country %></option>
                                    <% submission.forEach(function (op) { 
                                        op.country.forEach(function (opt) {%>
                                    <option value="<%= opt %>"><%= opt %></option>
                                    <%}) }) %>
            
                                </select><br>
                                <input name="blog_description" type="text" id="description" class="form-control mb-4"
                            value="<%= blogArray[0].result[0].blog.description %>">
                            <!-- Message -->
                            <div class="form-group">
                                <textarea name="blog_content" class="form-control rounded-0" id="blog_content" rows="10"><%= blogArray[0].result[0].blog.content %></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-6 m-auto">
                                    <div class="form-group files">
                                        <label>Upload Your File</label>
                                        <input type="file" name="files" class="form-control" multiple>
                                    </div>
                                </div>
                            </div>
                                <button class="btn purple-gradient" type="submit">Post Changes</button>
            </form>

        </div>
