<html>

<head>
  <title>Dashboard | GlobeTrotters</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!--<link href="images/land.css" type="text/css" rel="stylesheet">-->

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
  <!-- Bootstrap core CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.13.0/css/mdb.min.css" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <link rel="stylesheet" href="images/land.css">
  <style>
    .view {
      background-color: rgb(28, 56, 102);
    }

    header {
      height: 50%;
    }

    .view {
      height: 94%;
    }

    .bl{
      margin-top: 9px;
    }
  </style>

</head>

<body>

  <header>

    <nav class="navbar fixed-top navbar-expand-lg dest-nav">
      <a class="navbar-brand" href="/"><strong>Globe Trotters.</strong></a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/#About-us">About Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/destination">Destinations</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#Contact">Contact Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/#FAQs">FAQs</a>
          </li>
          <% if(user){%>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% } else { %>  
            <li class="nav-item">
              <a class="nav-link" href="/">Login</a>
            </li>
            <% } %>
        </ul>

      </div>


      </div>
    </nav>
    <div class="view intro-2">
      <div class="full-bg-img">
        <div class="mask rgba-black-light flex-center">
          <div class="container text-center white-text">
            <div class="offset-4 white-text text-center pt-5 row">

              <img width="15%" height="50%"
                src="https://cdn4.iconfinder.com/data/icons/occupation-and-people-avatar-vol-1-1/128/Woman_avatar_assistant_young_people_female_girl-512.png"/>
              <div>
                <h2>  <%= dashboard.first_name %> <%= dashboard.last_name %> </h2>
                <a style="padding: 3px;" class="btn btn-primary" href="/profile">Profile</a>
              </div>  
            </div>
          </div>
        </div>
      </div>
    </div>

  </header>

  <div class="container">

    <ul class="nav nav-pills d-flex justify-content-center mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
          aria-controls="pills-home" aria-selected="true"><i class="fas fa-desktop mr-2"></i>My Wall</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" href="/newblog" role="tab"
          aria-controls="pills-profile" aria-selected="false"><i class="far fa-edit mr-2"></i>Add Blog</a>
      </li>
    </ul>
    <!--/.Navbar-->
    <div class="row offset-1">

      <!-- Card Wider -->
      <% dashboard.continent.forEach(function (wall) { %>
      <!-- Card -->
      <div data-aos="fade-up"
      data-aos-duration="3000" class="bl card col-md-5 m-4 h-100">

        <!-- Card image -->
        <div class="view overlay">
          <% if(typeof wall.blog.data !== 'undefined' && wall.blog.data.length > 0){ %>
            <img src="data:image/png;base64,<%= wall.blog.data[0] %>" class="img-fluid" alt="Sample image for first version of blog listing">
            <%} else{ %>
              <img src="https://images.pexels.com/photos/2419865/pexels-photo-2419865.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" class="img-fluid" alt="Sample image for first version of blog listing">
            <%}%>
          <a href="#!">
            <div class="mask rgba-white-slight"></div>
          </a>
        </div>

        <!-- Card content -->
        <div class="card-body">
          <form action="blogpage" method="POST" id="formBlog">
          <!-- Title -->
          <h4 class="card-title"><input style="border: none;" name="blogTitle" value="<%= wall.blog.title %>" readonly></h4>
          <!-- Text -->
          <p class="card-text"><%= wall.blog.description %><br><input style="border:none;" name="blogEmail" value="<%= dashboard.email %>"><br>
          <% if(typeof wall.blog.date !== 'undefined'){ %>
            <%= wall.blog.date.substring(0,16) %></p>
            <%}%>
          <!-- Button -->
          <button type="submit" class="btn btn-success">Read more  <i class="fas fa-angle-double-right"></i></button>
          </form>

        </div>

      </div>
      <!-- Card -->
      <% }) %>
      
    </div>

    <!-- Card Light -->

    <!-- Card Light -->
  </div>

  </div>



  <br><br>
  <footer class="page-footer font-small pt-5 pb-n5">

    <!--Footer Links-->
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-4">
          <h1>GlobeTrotters.</h1>

        </div>
        <!--/.First column-->

        <!--Second column-->
        <div class="col-md-4">

          <ul>
            <li><a href="/#About-us">About Us</a></li>
            <li><a href="/destination">Destinations</a></li>
            <li><a href="/#FAQs">FAQs</a></li>
          </ul>
        </div>
        <div class="col-md-4">
          <h4>Contact Us</h4>
          <p><i class="fa fa-mobile" aria-hidden="true"></i> 1234567890
            <br><i class="fa fa-phone" aria-hidden="true"></i> 0987654321
            <br><a href="mailto:globetrotters@gmail.com"><i class="fa fa-envelope" aria-hidden="true"></i>
              globetrotters@gmail.com</a></p>
        </div>
        <!--/.Second column-->
      </div>
    </div>

    <!-- Copyright -->
    <div class="footer-copyright text-center py-3"> Made with <i class="far fa-heart"></i> by GlobeTrotters
    </div>
    <!-- Copyright -->

  </footer>
  <script>
    AOS.init();
  </script>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.13.0/js/mdb.min.js"></script>

</body>

</html>